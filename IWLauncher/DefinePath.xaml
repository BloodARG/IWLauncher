<Window x:Class="IWLauncher.DefinePath"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IWLauncher"
        mc:Ignorable="d"
        Title="DefinePath" Height="300" Width="590" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" >
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="24" Margin="10,129,0,0" TextWrapping="Wrap" Text="Path to your League of Legends 4.20" VerticalAlignment="Top" Width="379" />
        <Button x:Name="button" Content="Save" HorizontalAlignment="Left" Height="26" Margin="229,264,0,0" VerticalAlignment="Top" Width="112" Click="button_Click"/>
        <Label x:Name="label" Content="Hi, it appears that you are running IWLauncher for the&#xA;first time, please let us know where your League of Legends 4.20 is!&#xA;Ex: C:\Riot Games 4.20\League of Legends\" HorizontalAlignment="Left" Height="59" Margin="10,30,0,0" VerticalAlignment="Top" Width="496" Foreground="White" FontFamily="Arial Black" Background="{x:Null}"/>
        <Button x:Name="button1" Content="..." HorizontalAlignment="Left" Height="26" Margin="394,129,0,0" VerticalAlignment="Top" Width="80" Click="button1_Click"/>

    </Grid>
</Window>
